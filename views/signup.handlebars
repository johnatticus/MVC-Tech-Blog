<div class="post card">
    <div class="card-header">
        <h2>Sign Up</h2>
    </div>
    <form id="edit-post-form" class="card-body">
        {{!-- <input type="hidden" name="post-id" value="{{post.id}}" /> --}}

        <label class="form-label" for="username-signup">Username</label>
        <input type="text" name="username-signup" value="{{username}}" class="form-input" />

        <label class="form-label" for="password-signup">Password</label>
        <textarea name="password-signup" class="form-input">{{password}}</textarea>

        <button type="submit" class="btn">Sign Up</button>

        <p><a href="/login">Log in instead</a></p>
    </form>
</div>



<script src="/js/signup.js"></script>