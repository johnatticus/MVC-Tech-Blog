{{#if logged_in}}
<div class="post card">
    <div class="card-header">
        <h2>Create New Post</h2>
    </div>
    <form id="new-post-form" class="card-body">
        {{!-- <input type="hidden" name="post-id" value="{{post.id}}" /> --}}

        <label class="form-label" for="post-title">Title</label>
        <input type="text" id="post-title" name="post-title" class="form-input" />

        <label class="form-label" for="post-body">Content</label>
        <textarea id="post-body" name="post-body" class="form-input"></textarea>

        <button type="submit" class="btn">Create</button>

    </form>
</div>
{{/if}}


<script src="/js/new.js"> </script>