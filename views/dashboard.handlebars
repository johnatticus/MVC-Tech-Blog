{{#if logged_in}}
{{#each posts as |post| }}
<div class="post card">
    <div class="card-header">
        <h2>{{post.title}}</h2>
    </div>
    <div class="card-body">
        <p>{{post.content}}</p>
    </div>
</div>
{{/each}}
<div class="post card">
    <div class="card-header">
        <h2>Create New Post</h2>
    </div>
    <form id="new-post-form" class="card-body">
        {{!-- <input type="hidden" name="post-id" value="{{post.id}}" /> --}}

        <label class="form-label" for="post-title">Title</label>
        <input type="text" id="post-title" name="post-title" class="form-input" />

        <label class="form-label" for="post-body">Content</label>
        <textarea id="post-body" name="post-body" class="form-input"></textarea>

        <button type="submit" class="btn">Create</button>

    </form>
</div>
{{/if}}
    <a href="/newpost"><button id="new-post-form" type="submit" class="btn">+ New Post</button></a>

<script src="/js/new.js"> </script>